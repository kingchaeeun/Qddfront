{
  "name": "quote-distortion-detector",
  "version": "1.0.0",
  "description": "Chrome Extension for detecting quote distortion in news articles",
  "type": "module",
  "scripts": {
    "dev": "vite --config vite.config.extension.ts",
    "build": "vite build --config vite.config.extension.ts",
    "build:watch": "vite build --config vite.config.extension.ts --watch",
    "copy:manifest": "cp manifest.json dist/",
    "copy:icons": "cp -r public/icons dist/",
    "postbuild": "npm run copy:manifest && npm run copy:icons"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.263.1",
    "recharts": "^2.10.0",
    "motion": "^10.16.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "tailwindcss": "^4.0.0"
  }
}
